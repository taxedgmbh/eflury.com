---
import { type Language, useTranslations, routes } from '../i18n/utils';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const currentRoutes = routes[lang];
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-container">
    <!-- Column 1: Brand & Description -->
    <div class="footer-section">
      <h3 class="footer-logo">Emanuel Flury</h3>
      <p class="footer-tagline">{t('footer.tagline')}</p>
      <p class="footer-description">{t('footer.description')}</p>

      <!-- Social Media Links -->
      <div class="social-links">
        <a href="https://linkedin.com/in/emanuelflury" target="_blank" rel="noopener" title="LinkedIn" aria-label="Visit LinkedIn profile">
          <i class="fab fa-linkedin"></i>
        </a>
        <a href="https://github.com/taxedgmbh" target="_blank" rel="noopener" title="GitHub" aria-label="Visit GitHub profile">
          <i class="fab fa-github"></i>
        </a>
        <a href="mailto:me@eflury.com" title="Email" aria-label="Send email">
          <i class="fas fa-envelope"></i>
        </a>
        <a href="tel:+41799107787" title="Phone" aria-label="Call phone number">
          <i class="fas fa-phone"></i>
        </a>
      </div>
    </div>

    <!-- Column 2: Services -->
    <div class="footer-section">
      <h4>{t('footer.sections.services')}</h4>
      <ul class="footer-links">
        <li><a href={`${currentRoutes.services}`}>{t('footer.services_list.automation')}</a></li>
        <li><a href={`${currentRoutes.services}`}>{t('footer.services_list.tax')}</a></li>
        <li><a href={`${currentRoutes.services}`}>{t('footer.services_list.analytics')}</a></li>
        <li><a href={`${currentRoutes.services}`}>{t('footer.services_list.consulting')}</a></li>
      </ul>
    </div>

    <!-- Column 3: Contact -->
    <div class="footer-section">
      <h4>{lang === 'en' ? 'Contact' : 'Kontakt'}</h4>
      <ul class="footer-links">
        <li><a href="mailto:me@eflury.com">me@eflury.com</a></li>
        <li><a href="tel:+41799107787">+41 79 910 77 87</a></li>
        <li><span>Grenchen, Switzerland</span></li>
      </ul>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="footer-bottom-container">
      <p class="copyright">&copy; {currentYear} Emanuel Flury</p>

      <!-- Small Legal Links (hidden style like big companies) -->
      <nav class="legal-links" aria-label="Legal">
        <a href={currentRoutes.privacy}>Privacy</a>
        <a href={currentRoutes.terms}>Terms</a>
        <a href={currentRoutes.cookies}>Cookies</a>
        <a href="/disclaimer.html">Disclaimer</a>
        <a href="/code-of-conduct.html">Code of Conduct</a>
        <a href="https://www.edoeb.admin.ch/edoeb/en/home.html" target="_blank" rel="noopener">Data Protection</a>
      </nav>

      <p class="made-with">{t('footer.made_with')}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--bg-secondary);
    border-top: 1px solid rgba(0, 122, 77, 0.2);
    padding: 4rem 0 0;
    margin-top: 5rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }

  .footer-section h3,
  .footer-section h4 {
    color: var(--primary-green);
    margin-bottom: 1rem;
  }

  .footer-logo {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .footer-tagline {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .footer-description {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--card-bg);
    border: 1px solid rgba(0, 122, 77, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    text-decoration: none;
    transition: var(--transition-smooth);
    font-size: 1.1rem;
  }

  .social-links a:hover {
    background: var(--gradient-primary);
    color: white;
    border-color: transparent;
    transform: translateY(-3px);
    box-shadow: var(--shadow-soft);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-links a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: var(--transition-smooth);
    display: inline-block;
  }

  .footer-links a:hover {
    color: var(--primary-green);
    transform: translateX(5px);
  }

  .footer-bottom {
    margin-top: 3rem;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(0, 122, 77, 0.1);
    background: var(--bg-primary);
  }

  .footer-bottom-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright,
  .made-with {
    color: var(--text-secondary);
    font-size: 0.85rem;
    margin: 0;
  }

  /* Legal Links - Small & Hidden Style (like Apple, Google) */
  .legal-links {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .legal-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.75rem;
    opacity: 0.7;
    transition: opacity 0.2s ease;
    padding: 0.25rem 0.5rem;
    border-right: 1px solid rgba(107, 114, 128, 0.3);
  }

  .legal-links a:last-child {
    border-right: none;
  }

  .legal-links a:hover {
    opacity: 1;
    text-decoration: underline;
  }

  @media (max-width: 1024px) {
    .footer-bottom-container {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .legal-links {
      order: 2;
    }

    .copyright {
      order: 1;
    }

    .made-with {
      order: 3;
    }
  }

  @media (max-width: 768px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .legal-links {
      flex-direction: column;
      gap: 0.75rem;
    }

    .legal-links a {
      border-right: none;
      border-bottom: 1px solid rgba(107, 114, 128, 0.2);
      padding: 0.5rem 0;
    }

    .legal-links a:last-child {
      border-bottom: none;
    }
  }
</style>
