---
import { type Language, useTranslations, routes } from '../i18n/utils';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const currentRoutes = routes[lang];
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-container">
    <!-- Column 1: Brand & Description -->
    <div class="footer-section">
      <h3 class="footer-logo">Emanuel Flury</h3>
      <p class="footer-tagline">{t('footer.tagline')}</p>
      <p class="footer-description">{t('footer.description')}</p>

      <!-- Social Media Links -->
      <div class="social-links">
        <a href="https://linkedin.com/in/eflury" target="_blank" rel="noopener" title="LinkedIn" aria-label="Visit LinkedIn profile">
          <i class="fab fa-linkedin"></i>
        </a>
        <a href="https://github.com/taxedgmbh" target="_blank" rel="noopener" title="GitHub" aria-label="Visit GitHub profile">
          <i class="fab fa-github"></i>
        </a>
        <a href="mailto:me@eflury.com" title="Email" aria-label="Send email">
          <i class="fas fa-envelope"></i>
        </a>
        <a href="tel:+41799107787" title="Phone" aria-label="Call phone number">
          <i class="fas fa-phone"></i>
        </a>
      </div>
    </div>

    <!-- Column 2: Quick Links -->
    <div class="footer-section">
      <h4>{t('footer.sections.quick_links')}</h4>
      <ul class="footer-links">
        <li><a href={currentRoutes.home}>{t('footer.links.home')}</a></li>
        <li><a href={currentRoutes.services}>{t('footer.links.services')}</a></li>
        <li><a href={currentRoutes.portfolio}>{t('footer.links.portfolio')}</a></li>
        <li><a href={currentRoutes.blog}>{t('footer.links.blog')}</a></li>
        <li><a href={currentRoutes.contact}>{t('footer.links.contact')}</a></li>
      </ul>
    </div>

    <!-- Column 3: Services -->
    <div class="footer-section">
      <h4>{t('footer.sections.services')}</h4>
      <ul class="footer-links">
        <li><a href={`${currentRoutes.services}`}>{t('footer.services_list.automation')}</a></li>
        <li><a href={`${currentRoutes.services}`}>{t('footer.services_list.tax')}</a></li>
        <li><a href={`${currentRoutes.services}`}>{t('footer.services_list.analytics')}</a></li>
        <li><a href={`${currentRoutes.services}`}>{t('footer.services_list.consulting')}</a></li>
      </ul>
    </div>

    <!-- Column 4: Legal -->
    <div class="footer-section">
      <h4>{t('footer.sections.legal')}</h4>
      <ul class="footer-links">
        <li><a href={currentRoutes.privacy}>{t('footer.links.privacy')}</a></li>
        <li><a href={currentRoutes.terms}>{t('footer.links.terms')}</a></li>
        <li><a href={currentRoutes.cookies}>{t('footer.links.cookies')}</a></li>
        <li><a href="https://www.edoeb.admin.ch" target="_blank" rel="noopener">{t('footer.links.data_protection')}</a></li>
      </ul>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="footer-container">
      <p>&copy; {currentYear} Emanuel Flury. {lang === 'en' ? 'All rights reserved.' : 'Alle Rechte vorbehalten.'}</p>
      <p>{t('footer.made_with')}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--bg-secondary);
    border-top: 1px solid rgba(0, 122, 77, 0.2);
    padding: 4rem 0 0;
    margin-top: 5rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }

  .footer-section h3,
  .footer-section h4 {
    color: var(--primary-green);
    margin-bottom: 1rem;
  }

  .footer-logo {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .footer-tagline {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .footer-description {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--card-bg);
    border: 1px solid rgba(0, 122, 77, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    text-decoration: none;
    transition: var(--transition-smooth);
    font-size: 1.1rem;
  }

  .social-links a:hover {
    background: var(--gradient-primary);
    color: white;
    border-color: transparent;
    transform: translateY(-3px);
    box-shadow: var(--shadow-soft);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-links a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: var(--transition-smooth);
    display: inline-block;
  }

  .footer-links a:hover {
    color: var(--primary-green);
    transform: translateX(5px);
  }

  .footer-bottom {
    margin-top: 3rem;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(0, 122, 77, 0.1);
  }

  .footer-bottom .footer-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .footer-bottom p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-bottom .footer-container {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
