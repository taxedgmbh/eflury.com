---
import { Share2 } from 'lucide-astro';
import { sharePage } from '../scripts/modern-features';
---

<button 
  class="share-button" 
  onclick="window.sharePage?.() || sharePage()"
  aria-label="Share this page"
  title="Share page"
>
  <Share2 size={18} />
  <span class="share-text">Share</span>
</button>

<style>
  .share-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--bg-secondary);
    border: 0.5px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: 15px;
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .share-button:hover {
    background: var(--bg-tertiary);
    border-color: var(--primary);
    transform: translateY(-1px);
  }

  .share-button:active {
    transform: translateY(0);
  }

  .share-text {
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .share-text {
      display: none;
    }
    
    .share-button {
      width: 40px;
      height: 40px;
      padding: 0;
      justify-content: center;
      border-radius: var(--radius-full);
    }
  }
</style>

<script>
  // Make sharePage available globally
  import { sharePage } from '../scripts/modern-features';
  (window as any).sharePage = sharePage;
</script>

